<% content_for :head do %>
    <%= stylesheet_link_tag 'pixit/plugins/magnific-popup.css', media: "all" %>
<% end %>
<section class="section-top">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="align-center">
          <i class="glyph-icon flaticon-gallery fa-5x m-b-20"></i>

          <h1 class="slogan">Discover Cutting-Edge Science</h1>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="section-crowdreview" class="section appear clearfix">
  <%
     Campaign.all.each do |campaign|
  %>
      <div class="row">
        <!--<hr>-->
        <div class="col-md-12">
          <div class="panel">
            <div class="text-center pull-left">
              <i class="fa fa-long-arrow-up upvote-button " data-campaign-id="<%= campaign.id%>"></i>
              <div class="text-center">
                <span>20</span>
              </div>
            </div>
            <div>
              <div class="panel-heading text-center">
                <h3><%= campaign.title %></h3>
                <span class="author"><%= campaign.author_name %></span>
              </div>
              <div>
                <%= campaign.excerpt %>
              </div>
            </div>
          </div>
        </div>
      </div>
  <%
     end
  %>
</section>
