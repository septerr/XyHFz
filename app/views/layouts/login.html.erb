<body class="login fade-in" data-page="login">
<!-- BEGIN LOGIN BOX -->
<div class="container" id="login-block">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
      <div class="login-box clearfix animated flipInY">
        <div class="page-icon animated bounceInDown">
          <img src="<%= asset_path 'pixit/account/user-icon.png' %>" alt="Key icon">
        </div>
        <div class="login-logo">
          <a href="#?login-theme-3">
            <img src="<%= asset_path 'pixit/account/login-logo.png' %>" alt="Company Logo">
          </a>
        </div>
        <hr>
        <div class="login-form">
          <!-- BEGIN ERROR BOX -->
          <div class="alert alert-danger hide">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <h4>Error!</h4>
            Your Error Message goes here
          </div>
          <!-- END ERROR BOX -->
          <form action="index.html" method="post">
            <input type="text" placeholder="Email" class="input-field form-control user" />
            <input type="password" placeholder="Password" class="input-field form-control password" />
            <button type="submit" class="btn btn-login">Login</button>
          </form>
          <div class="social-login row">
            <div class="fb-login col-lg-6 col-md-12 animated flipInX">
              <a href="<%= user_omniauth_authorize_path(:facebook)%>" class="btn btn-facebook btn-block">Connect with <strong>Facebook</strong></a>
            </div>
            <div class="twit-login col-lg-6 col-md-12 animated flipInX">
              <a href="#" class="btn btn-twitter btn-block">Connect with <strong>Twitter</strong></a>
            </div>
          </div>
          <div class="login-links">
            <a href="signup.html">Don't have an account? <strong>Sign Up</strong></a>
            <br>
            <a href="password_forgot.html">Forgot password?</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END LOCKSCREEN BOX -->
<!-- BEGIN MANDATORY SCRIPTS -->
<!-- END MANDATORY SCRIPTS -->
<!-- BEGIN PAGE LEVEL SCRIPTS -->
<!-- END PAGE LEVEL SCRIPTS -->
<%= javascript_include_tag 'login_manifest_footer' %>
</body>

</html>
