<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Healthfundit" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Healthfundit" %>">
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <div class="main">
       <%= render 'layouts/messages' %>
       <%= yield %>
    </div>
  </body>
</html>
